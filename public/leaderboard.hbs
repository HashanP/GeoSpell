<div class="row">
	{{#if showScore}}
		<div class="col-md-12">
			<div class="alert alert-success" role="alert">
				<b>Well done!</b> You got: {{score}}.
				The answer to the final question was {{oldWord}}.
			</div>
			<form id="submit-score-form" class="well">
				<label>Email</label>
				<input class="form-control" id="email"/>
				<br/>
				<button id="submit-score" class="btn btn-primary">Submit</button>
				<button type="button" class="btn btn-success">Go again!</button>
			</form>
		</div>
	{{/if}}
	{{#if localScores}}
	<div class="col-md-6">
		<h3 >Local Leaderboards</h3>
	</div>
	{{/if}}
	<div class="col-md-6">
		<h3>Global Leaderboards</h3>
	</div>
	<div class="col-md-6">	
		<p>See where you scale against others around the country!</p>
	</div>
	
	<div class="col-md-6">
		<p>See where you scale against others around the globe!</p>
	</div>
	{{#if localScores}}
	<div class="col-md-6">
	<table class="table table-bordered">
		<tr class="active">
			<td>#</td>
			<td>Name</td>
		</tr>
		{{#each localScores}}
			<tr>
    			<td>{{@index}}</td>
    			<td>
    				{{@key}}
    				<span class="label label-success">{{this}}</span>
   				</td>
    		</tr>
		{{/each}}
	</table>
</div>
{{/if}}
<div class="col-md-6">
	<table class="table table-bordered">
		<tr class="active">
			<td>#</td>
			<td>Name</td>
		</tr>
		{{#each globalScores}}
			<tr>
    			<td>{{@index}}</td>
    			<td>
    				{{@key}}
    				<span class="label label-success">{{this}}</span>
   				</td>
    		</tr>
		{{/each}}
	</table>
</div>
</div>